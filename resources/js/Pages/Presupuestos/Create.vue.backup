<script setup>
import { ref, computed } from 'vue'
import AppLayout from '@/Layouts/AppLayout.vue'
import { Head, Link, useForm, router } from '@inertiajs/vue3'
import InputLabel from '@/Components/InputLabel.vue'
import TextInput from '@/Components/TextInput.vue'
import InputError from '@/Components/InputError.vue'
import PrimaryButton from '@/Components/PrimaryButton.vue'

const props = defineProps({
  title: String,
  notaPedido: {
    type: Object,
    default: null
  },
  notasPedido: {
    type: Array,
    default: () => []
  },
  proveedores: Array,
  ejercicioActual: Number,
  step: {
    type: String,
    default: 'select_note'
  }
})

const breadcrumbs = [
  { name: 'Dashboard', href: '/dashboard' },
  { name: 'Presupuestos', href: '/presupuestos' },
  { name: 'Nuevo Presupuesto', href: null }
]

// Estado para búsqueda de notas
const searchTerm = ref('')

// Notas filtradas
const filteredNotas = computed(() => {
  if (!searchTerm.value) return props.notasPedido
  
  const term = searchTerm.value.toLowerCase()
  return props.notasPedido.filter(nota => 
    nota.numero_nota.toString().includes(term) ||
    nota.descripcion.toLowerCase().includes(term) ||
    (nota.expediente && nota.expediente.toLowerCase().includes(term)) ||
    nota.oficina?.nombre.toLowerCase().includes(term)
  )
})

// Preparar los detalles del formulario basados en los detalles de la nota de pedido
const detallesIniciales = props.notaPedido ? props.notaPedido.detalles.map(detalle => ({
  insumo_id: detalle.insumo_id,
  renglon: detalle.renglon,
  cantidad: detalle.cantidad,
  precio_unitario: detalle.precio_unitario || 0,
  unidad_medida: detalle.insumo?.unidad_medida || '',
  especificaciones_tecnicas: '',
  observaciones: '',
  marca: '',
  modelo: ''
})) : []

const form = useForm({
  nota_pedido_id: props.notaPedido?.id || '',
  proveedor_id: '',
  plazo_entrega: '',
  forma_pago: '',
  validez_oferta: '',
  observaciones: '',
  detalles: detallesIniciales
})

const selectNote = (notaPedidoId) => {
  router.get(route('presupuestos.create', { nota_pedido_id: notaPedidoId }))
}

const submit = () => {
  form.post(route('presupuestos.store'))
}

const formatNumber = (number) => {
  if (!number) return '0.00'
  return new Intl.NumberFormat('es-AR', {
    minimumFractionDigits: 2,
    maximumFractionDigits: 2
  }).format(number)
}

const formatDate = (date) => {
  if (!date) return ''
  return new Date(date).toLocaleDateString('es-AR')
}

const getInsumoDescripcion = (insumoId) => {
  if (!props.notaPedido) return ''
  const detalle = props.notaPedido.detalles.find(d => d.insumo_id === insumoId)
  return detalle?.insumo?.descripcion || ''
}

const getCantidadOriginal = (insumoId) => {
  if (!props.notaPedido) return 0
  const detalle = props.notaPedido.detalles.find(d => d.insumo_id === insumoId)
  return detalle?.cantidad || 0
}

const calcularTotalRenglon = (index) => {
  // El total se calcula automáticamente en el backend
  // Esta función es solo para mostrar el cálculo en tiempo real
  const detalle = form.detalles[index]
  const cantidadOriginal = getCantidadOriginal(detalle.insumo_id)
  return (detalle.precio_unitario || 0) * cantidadOriginal
}
</script>